azul = #22BCE0
gris_oscuro = #444
body
    background-color #E8E8E8
    color gris_oscuro
    font-family Arial
    font-size 16px

header
    background gris_oscuro
    color white
    padding 0.5em

    .logo
        border-right 1px solid azul
        width 60px

        img
            width 52px

    .titular
        margin 0 80px 0 70px //este ultimo valor es 70 debido a que el elemento .logo es flotante, esto hace que el margin lo tomo como si no existiese

        .titulo
            font-size 18px
            font-weight normal
            margin 0
            padding 0

    .usuario

        .avatar

            img
                border-radius 50%
                width 50px

nav
    background azul

.left
    float left

.right
    float right